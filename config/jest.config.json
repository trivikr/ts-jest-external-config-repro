{
  "collectCoverage": true,
  "globals": {
    "ts-jest": {
      "skipBabel": true
    }
  },
  "transform": {
    ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "mapCoverage": true
}

{
  "name": "ts-jest-external-config-repro",
  "version": "1.0.0",
  "description": "Repro repo for defining external Jest configuration in ts-jest@20.0.x",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "test1": "npm run build && jest --config ./config/jest.config.json",
    "test2": "npm run build && jest --config ./config/jest.config.json --rootDir ."
  },
  "keywords": ["Jest", "TypeScript", "ts-jest", "jest", "configuration"],
  "author": "Trivikram Kamat",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^20.0.7",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2"
  }
}
